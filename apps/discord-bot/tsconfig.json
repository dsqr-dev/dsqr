{
    "extends": "@tsconfig/node22/tsconfig.json",
    "compilerOptions": {
      "outDir": "dist",
      "declaration": true,
      "skipLibCheck": true,
      "module": "NodeNext",
      "moduleResolution": "NodeNext",
      "emitDeclarationOnly": true,
      "allowImportingTsExtensions": true,
      "allowSyntheticDefaultImports": true,
      "baseUrl": ".",
      "types": ["bun-types"],
      "paths": {
        "@/*": ["./src/*"]
      }
    },
  }